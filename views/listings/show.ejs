<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing details</h3>
  </div>
    <div class="card col-6 offset-2 show-card">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="..." />
      <div class="card-body">
        <p class="card-text">
            <b><%= listing.title %></p></b>
            <br>
            <%= listing.description %>
            <br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
            <br>
            <%= listing.location %>
            <br>
            <%= listing.country %>
            <br>
      </div>
    </div>
    <br />
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-2 mb-1"><b>Edit</b></a>
        <br /><br />
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
          <button class="btn btn-dark offset-4"> <b>Delete</b></button>
    </div>
    
    </form>
</div>
