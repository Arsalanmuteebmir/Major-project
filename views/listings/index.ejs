<% layout("/layouts/boilerplate") %>
<body>
  <h3>All Listings</h3>
  <!-- <form action="/listings/new" method="GET">
        <button>Create Listing</button>
    </form> -->
  <div class="row row-cols-lg-3 row-cols-md-3 row-col-sm-1">
    <% for(let listing of alllistings){ %>
    <a href="/listings/<%= listing._id %> " class="listing-links">
      <div class="card col">
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          style="height: 20rem"
          alt="..."
        />
        <div class="card-img-overlay">Sukoon</div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            &#8377;<%=listing.price.toLocaleString("en-IN") %>/Night
          </p>
        </div>
      </div>
    </a>
      <% } %>
  </div>
</body>
